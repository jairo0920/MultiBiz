@page "/reset"
@inject NavigationManager Nav
@inject ApiClient Api

@code {
    string? user;
    string? token;
    string newPassword = "";
    string? msg;
    string? err;
    bool submitting = false;

    protected override void OnInitialized()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var qs = System.Web.HttpUtility.ParseQueryString(uri.Query);
        user = qs["user"];
        token = qs["token"];
    }

    async Task Submit()
    {
        err = msg = null;
        if (string.IsNullOrWhiteSpace(user) || string.IsNullOrWhiteSpace(token) || string.IsNullOrWhiteSpace(newPassword))
        { err = "Datos incompletos."; return; }

        try
        {
            submitting = true;
            await Api.ResetPassword(user!, token!, newPassword);
            msg = "Contrase침a actualizada. Ahora puede iniciar sesi칩n.";
        }
        catch (Exception ex)
        {
            err = ex.Message;
        }
        finally
        {
            submitting = false;
        }
    }
}

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Restablecer contrase침a</h5>
          @if (!string.IsNullOrEmpty(err)){<div class="alert alert-danger">@err</div>}
          @if (!string.IsNullOrEmpty(msg)){<div class="alert alert-success">@msg</div>}
          <div class="mb-3">
            <label class="form-label">Nueva contrase침a</label>
            <input type="password" class="form-control" @bind="newPassword" />
          </div>
          <button class="btn btn-primary w-100" disabled="@submitting" @onclick="Submit">
            @(submitting ? "Guardando..." : "Guardar")
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

@page "/admin/users"
@inject ApiClient Api

<SecureRoute>
    <h4>Usuarios</h4>

    @if (_loading)
    {
        <p>Cargando...</p>
    }
    else
    {
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Usuario</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var u in _data.Items)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.UserName</td>
                    <td>@u.Email</td>
                </tr>
            }
            </tbody>
        </table>
        <div>Total: @_data.TotalCount</div>
    }
</SecureRoute>

@code {
    private PagedResult<UserDto> _data = new(Array.Empty<UserDto>(), 1, 10, 0);
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        _data = await Api.GetUsers(1, 10, "");
        _loading = false;
    }
}
